{
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "jquery": true,
      "es6": true,
      "mocha": true,
      "jasmine": true
    },
    "extends": "airbnb",
    "rules": {
      "linebreak-style": [
        "off"
      ],
      "no-useless-constructor": [
        "off"
      ],
      "forbid-prop-types": [
        "off"
      ],
      "jsx-a11y/no-static-element-interactions": [
        "off"
      ],
      "max-len": [
        "warn",
        120,
        2,
        {
          "ignoreComments": true
        }
      ],
      "no-plusplus": [
        "error",
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true,
          "optionalDependencies": false,
          "peerDependencies": false
        }
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_source",
            "_targetInst",
            "_currentElement"
          ]
        }
      ],
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "DragDropContext",
            "DropTarget",
            "DragSource",
            "DragLayer",
            "ContextMenuLayer",
            "Radium",
            "EnforceAuthentication",
            "HighchartsMore"
          ]
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "webpack.config.dev.js"
        }
      }
    }
  }
  